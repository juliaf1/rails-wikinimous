<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-center">
      <div class="col-10 col-lg-8 mb-3">
        <h1><%= link_to article.title.upcase, article_path(article) %></h1>
        <p><%= article.content %></p>
      </div>
    </div>
  <% end %>

</div>
